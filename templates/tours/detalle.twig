{% extends "plantilla.twig" %}
{% block liksPropios %}
    <link rel="stylesheet" type="text/css" href="{{ asset('scripts/slick/slick.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('scripts/slick/slick-theme.css') }}"/>
{% endblock %}
{% set nomLugar = ('tours.'~idtour~'.sitios.'~idsitio~'.nombre') | trans  %}
{% block titulo %} {{ nomLugar }} {% endblock %}

{% block contenido %}
    <div class="container-fluid paddingPaginaPrin">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <h2><b>{{ nomLugar }}</b></h2>
            </div>
        </div>
        <div class="row cuadroImagenInfo">
            <div class="col-sm-10 col-sm-offset-1 fondoAzul">
                <div class="row">
                    <div class="col-sm-7 paddingIzqCero paddingDerCero">
                        {% set totg = ('tours.'~idtour~'.sitios.'~idsitio~'.galeria.0') | trans %}
                        <div class="galeriaCentral">
                            {% for i in range(1,totg) %}
                                <div><img src="{{ asset('imagenes/tours/'~('tours.'~idtour~'.sitios.'~idsitio~'.galeria.'~i) | trans ) }}" class="img-responsive"></div>
                            {% endfor %}
                        </div>
                        <div class="galeriaLista">
                            {% for i in range(1,totg) %}
                                <div><img src="{{ asset('imagenes/tours/'~('tours.'~idtour~'.sitios.'~idsitio~'.galeria.'~i) | trans ) }}" class="img-responsive"></div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-sm-5 letraBlanca contInfoPack">
                        <div class="row">
                            <div class="col-sm-12 contParrafoPack">
                                <h4 class="text-right"><b>{{ ('acercade') | trans }}</b></h4>
                                <p class="text-justify">
                                   {{ ('tours.'~idtour~'.sitios.'~idsitio~'.descripcion') | trans }}
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 col-sm-offset-8">
                                {% set link = ('solicitar.link') | trans %}
                                <a id="verMas" class="btn botonEncuentralos letraBlanca" href="{{ path (link) }}"><b>{{ ('solicitar.titulo') | trans }}</b></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% set colorRectangulo = 'fondoNaranja' %}
        {% set textoRectangulo = ('incluidos') | trans %}
        {% include 'estructura/rectangulo-subtitulo.twig' %}
        <div class="row filaIncluidoTours">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="row">
                    {% set toti = ('tours.'~idtour~'.sitios.'~idsitio~'.incluidos.0') | trans %}
                    {% for m in range(1,toti) %}
                        <div class="col-sm-3 contTextoServ">
                            {{ ('tours.'~idtour~'.sitios.'~idsitio~'.incluidos.'~m)| trans }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scriptsPropio %}
    <script type="text/javascript" src="{{ asset('scripts/slick/slick.min.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('.galeriaCentral').slick({
                slidesToShow: 1,
                slidesToScroll: 1,
                arrows: true,
                fade: true,
                asNavFor: '.galeriaLista',
                autoplay: true,
                autoplaySpeed: 2000
            });
            $('.galeriaLista').slick({
                slidesToShow: 3,
                slidesToScroll: 1,
                asNavFor: '.galeriaCentral',
                dots: false,
                centerMode: true,
                focusOnSelect: true,
                arrows: false,
                autoplay: true,
                autoplaySpeed: 2000
            });
        });
    </script>
{% endblock %}