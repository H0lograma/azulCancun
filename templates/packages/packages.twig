{% extends "plantilla.twig" %}
{% block titulo %} {{ 'menu.op4.5' | trans }} {% endblock %}

{% block contenido %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 paddingIzqCero paddingDerCero parallax-1 slide-paquete">
                <!--<img src="{ asset('imagenes/packages-slide.jpg') }}" class="img-responsive">-->
                <img src="{{ asset('imagenes/pleca-rojo.png') }}" class="img-responsive imagenSliderContact">
            </div>
        </div>
        {% set tituloPagina = ('menu.op4.5' | trans) %}
        {% include 'estructura/titulo.twig' %}
        {% set totp = ('paquetes.0') | trans %}
        {% for i in range(1,totp) %}
            <div class="row cuadroImagenInfo">
                <div class="col-sm-10 col-sm-offset-1 fondoAzul">
                    <div class="row">
                        <div class="col-sm-7 paddingIzqCero">
                            <img src="{{ asset('imagenes/packages/'~('paquetes.'~i~'.imagen')|trans) }}" class="img-responsive">
                        </div>
                        <div class="col-sm-5 letraBlanca contInfoPack">
                            <div class="row">
                                <div class="col-sm-12 text-right">
                                    <h4><b>{{ ('paquetes.'~i~'.titulo') | trans }}</b></h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 text-center contParrafoPack">
                                    {% set totc = ('paquetes.'~i~'.incluidos.0') | trans %}
                                    {% for l in range(1,totc) %}
                                        <b>{{ ('paquetes.'~i~'.incluidos.'~l~'.titulo') | trans }}</b>
                                        {% if l != totc  %}
                                            &nbsp; | &nbsp;
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 contParrafoPack">
                                    <p class="text-justify">
                                        {{ ('paquetes.'~i~'.texto') | trans }}
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4 col-sm-offset-8">
                                    {% set link = ('paquetes.'~i~'.link') | trans %}
                                    <a id="verMas" class="btn botonEncuentralos letraBlanca" href="{{ path(link) }}"><b>{{ ('mas') | trans }}</b></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>


{% endblock %}