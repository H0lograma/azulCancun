{% extends "plantilla.twig" %}
{% block titulo %} {{ 'transp.titulo' | trans }} {%  endblock %}

{% block contenido %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 paddingIzqCero paddingDerCero parallax-1 slide-transportacion">
                <!--<img src="{ asset('imagenes/transportation-slide.jpg') }}" class="img-responsive">-->
                <img src="{{ asset('imagenes/pleca-azul.png') }}" class="img-responsive imagenSliderContact">
            </div>
        </div>
        {% set tituloPagina = ('transp.titulo' | trans) %}
        {% include 'estructura/titulo.twig' %}
        <div class="row letraGrisMedio cuadroParrafo">
            <div class="col-sm-10 col-sm-offset-1">
                <h2 class="text-center espacioSubtNos">{{ 'transp.subtitulo1' | trans }}</h2>
                <h2>{{ 'transp.subtitulo2' | trans }}</h2>
                <p>{{ 'transp.parrafo1' | trans }}</p>
            </div>
        </div>

        {% set colorRectangulo = 'fondoAzul' %}
        {% set textoRectangulo = ('transp.subtitulo3'|trans) %}
        {% include 'estructura/rectangulo-subtitulo.twig' %}

        <div class="row filaListaNos letraGrisMedio">
            <div class="col-sm-8 col-sm-offset-2">
                <ul class="listNos">
                    {% for i in range(1,'transp.lista1.0'|trans) %}
                        <li>
                            {{ ('transp.lista1.'~i)|trans}}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="row letraGrisMedio cuadroParrafo">
            <div class="col-sm-10 col-sm-offset-1">
                <h2>{{ 'transp.subtitulo4' | trans }}</h2>
                <p>{{ 'transp.parrafo4' | trans }}</p>
            </div>
        </div>

        {% set colorRectangulo = 'fondoAzul' %}
        {% set textoRectangulo = ('transp.subtitulo3'|trans) %}
        {% include 'estructura/rectangulo-subtitulo.twig' %}

        <div class="row filaListaNos letraGrisMedio">
            <div class="col-sm-8 col-sm-offset-2">
                <ul class="listNos">
                    {% for i in range(1,'transp.lista2.0'|trans) %}
                        <li>
                            {{ ('transp.lista2.'~i)|trans}}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-11 col-sm-offset-1 letraGrisMedio filaDespListTransp">
                "{{ 'transp.parrafo6' | trans }}"
            </div>
        </div>
        <div class="row fondoGrisClaro">
            <div class="col-sm-6 paddingDerCero paddingIzqCero">
                <img src="{{ asset('imagenes/transportation-image.jpg') }}" class="img-responsive">
            </div>
            <div class="col-sm-4 col-sm-offset-1 letraGrisMedio">
                <h3 class="text-center"><b>{{ 'transp.formTitulo' | trans }}</b></h3>
                <form role="form" id="frmTransp" class="formularioContac">
                    <div class="form-group">
                        <label for="nombre"><b>{{ 'formIndex.campo1' | trans }}</b></label>
                        <input type="text" class="form-control validacontacto fondoGrisClaro" id="nombre" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="email"><b>{{ 'formIndex.campo3' | trans }}</b></label>
                        <input type="email" class="form-control fondoGrisClaro" id="correo" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="telefono"><b>{{ 'formIndex.campo2' | trans }}</b></label>
                        <input type="text" class="form-control fondoGrisClaro" id="telefono" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="telefono"><b>{{ 'formIndex.campo5' | trans }}</b></label>
                        <textarea class="form-control fondoGrisClaro" rows="3" id="comentarios" placeholder=""></textarea>
                    </div>
                    <button type="submit" id="enviarFormulario" class="btn botonEncuentralos letraBlanca center-block"><b>{{ 'formIndex.enviar' | trans }}</b></button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}